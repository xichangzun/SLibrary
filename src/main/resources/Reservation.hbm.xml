<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.xcz.borrow_history.domain.Reservation" table="RESERVATION" schema="slibrary">
        <composite-id name="uionPK" class="com.xcz.borrow_history.domain.UionPK">
            <key-property name="user_id" />
            <key-property name="ISBN" />
        </composite-id>
        <property name="state" type="java.lang.String">
            <column name="state" length="10" not-null="false" />
        </property>
    </class>
</hibernate-mapping>
