<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.xcz.borrow_history.domain.BorrowHistory" table="BORROW_HISTORY" schema="SLibrary">
        <composite-id name="uionPK" class="com.xcz.borrow_history.domain.BorrowUionPK">
            <key-property name="user_id" />
            <key-property name="ISBN" />
            <key-property name="return_date" />
        </composite-id>
        <property name="actual_date" type="java.sql.Date">
            <column name="actual_date" length="20" not-null="false" />
        </property>
    </class>
</hibernate-mapping>
