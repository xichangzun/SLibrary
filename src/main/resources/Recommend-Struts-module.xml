<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="recommemd" namespace="/Recommend" extends="struts-default">
        <action name="add" class="recommendAction" method="add">
            <result name="success" type="redirect">/recommendation.jsp</result>
            <result name="error" type="redirect">/recommendation.jsp</result>
        </action>
        <action name="get" class="recommendAction" method="queryByAjax"></action>
        <action name="updateState" class="recommendAction" method="updateState"></action>
    </package>
</struts>